// File: Chord.swift
import Foundation

/// Represents a single chord lesson in the app.
struct Chord: Identifiable, Codable, Equatable, Hashable {
    let id: UUID
    let name: String
    let type: String
    let imageName: String
    let tips: String
    let difficulty: Difficulty   // ‚Üê references Difficulty in separate file

    init(
        id: UUID = UUID(),
        name: String,
        type: String,
        imageName: String,
        tips: String,
        difficulty: Difficulty
    ) {
        self.id = id
        self.name = name
        self.type = type
        self.imageName = imageName
        self.tips = tips
        self.difficulty = difficulty
    }
}
